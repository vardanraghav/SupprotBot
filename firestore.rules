rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data.
    // This is a common pattern for multi-tenant apps.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write to collaboration channels.
    // In a real app, you'd likely have more granular rules (e.g., only channel members).
    match /collaborationChannels/{channelId}/{document=**} {
       allow read, write: if request.auth != null;
    }
  }
}
